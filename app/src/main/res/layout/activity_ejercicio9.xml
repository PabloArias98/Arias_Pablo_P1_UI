<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDDC39"
    tools:context=".Ejercicio9">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="201dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="#CA5C5C"
        android:drawableTint="#EFC122"
        android:fadingEdge="horizontal|vertical"
        android:gravity="center"
        android:text="Comentario"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textviewcaja"
        android:layout_width="408dp"
        android:layout_height="109dp"
        android:hint="Comience a escribir"
        android:inputType="textMultiLine|textCapCharacters"
        android:lines="6"
        android:minLines="5"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184" />

    <Button
        android:id="@+id/buttonregresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FDCF8B"
        android:text="REGRESAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textviewcaja"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/textviewcaja"
        app:layout_constraintTop_toBottomOf="@+id/textviewcaja"
        app:layout_constraintVertical_bias="0.548" />

    <Button
        android:id="@+id/buttonguardar"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:background="#8BC34A"
        android:text="Guardar"
        app:layout_constraintStart_toStartOf="@+id/textviewcaja"
        app:layout_constraintTop_toBottomOf="@+id/textviewcaja" />

    <Button
        android:id="@+id/buttoncancelar"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:background="#8BC34A"
        android:text="Cancelar"
        app:layout_constraintEnd_toEndOf="@+id/textviewcaja"
        app:layout_constraintTop_toBottomOf="@+id/textviewcaja" />

</androidx.constraintlayout.widget.ConstraintLayout>